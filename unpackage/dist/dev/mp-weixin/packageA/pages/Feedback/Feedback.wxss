.hc {
  background: #F8F8F8;
  width: 100%;
  height: 100%;
}
.hc .bg {
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 30rpx 50rpx;
  text-align: center;
  line-height: 100%;
}
.hc .bg .nav {
  margin-right: 20rpx;
}
.hc .bg .title {
  font-size: 30rpx;
  font-weight: 550;
  color: #141313;
}
.hc .body {
  padding: 50rpx;
}
.hc .body .titles {
  color: #FF9D00;
  font-size: 24rpx;
  width: 100%;
}
.hc .body .titleInput {
  margin-top: 20rpx;
  width: 100%;
  height: 75rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding-left: 24rpx;
}
.hc .body .textareaInput {
  margin-top: 20rpx;
  width: 100%;
  height: 270rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding-left: 24rpx;
}
.hc .body .footTitle {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: Regular;
  color: #B1B1B1;
}
.hc .body .footButton {
  margin: 70% 50rpx 0;
  border-radius: 50rpx;
  opacity: 1;
  box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.16);
}

